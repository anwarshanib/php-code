//Email validation using regular expression in JQUERY

	var reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;

        if (reg.test(document.forms["name1"]["Email"].value) == false) 
        {
            alert('Invalid Email Address');
            return false;
        }

        return true;
